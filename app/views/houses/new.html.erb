<h1>Add a House</h1>

<div id="form-content-3">

<%= form_for(@house) do |f| %>


<div class="errors">
<% if @house.errors.any? %>
<h2>Attention: Please fill out the entire form</h2>
<ul>
  <% @house.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
</div>


<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :motto %><br />
  <%= f.text_field :motto %>
</div>

<div class="field">
  <%= f.label :author %><br />
  <%= f.text_field :author %>
</div>

<div class="field">
  <%= f.label :source_material %><br />
  <%= f.text_field :source_material %>
</div>

<div class="field">
  <%= f.label :image %><br />
  <%= f.text_field :image %>
</div>

<br />
<div class="submit">
  <%= f.submit 'Submit' %>
</div>

<button>
  <%= link_to 'Back', houses_path %>
</button>


<% end %>

</div>
