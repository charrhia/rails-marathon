<h1>Edit a House</h1>

<div id="form-content-2">

<%= form_for(@house) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :motto %><br />
  <%= f.text_field :motto %>
</div>

<div class="field">
  <%= f.label :author %><br />
  <%= f.text_field :author %>
</div>

<div class="field">
  <%= f.label :source_material %><br />
  <%= f.text_field :source_material %>
</div>

<div class="field">
  <%= f.label :image %><br />
  <%= f.text_field :image %>
</div>

<br />
<div class="submit">
  <%= f.submit 'Submit' %>
</div>

<button>
  <%= link_to 'Back', @house %>
</button>


<% end %>

</div>
